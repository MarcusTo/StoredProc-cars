<body style="padding-top: 10px">
    <div class="col-xs-8 col-xs-offset-2">
        <div class="panel-heading">
            <h3>Employee Search Form</h3>
        </div>
        <form asp-controller="Cars" asp-action="Index">
            <div>
                <label for="manufacturer">Manufacturer</label>
                <br />
                <input type="text" name="manufacturer" placeholder="Nissan, Mitsubishi , Porsche" />
            </div>
            <br />
            <div>
                <label for="model">Model</label>
                <br />
                <input type="text" name="model" placeholder="Silvia ,Evo8, Macan" />
            </div>
            <br />
            <div>
                <label for="factory_color">Factory Color </label>
                <br />
                <input type="text" name="factory_color" placeholder="White, Red, Black" />
            </div>
            <br />

            <div>
                <label for="year">Year</label>
                <br />
                <input type="number" name="year" placeholder="1965-2021" />
            </div>
            <br />
            <div>
                <label for="horsepower">Horsepower</label>
                <br />
                <input type="number" name="horsepower" placeholder="" />
            </div>
            <br />
            <input type="submit" value="DynamicSQL" />
        </form>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">manufacturer</th>
                    <th scope="col">year</th>
                    <th scope="col">model</th>
                    <th scope="col">horsepower</th>
                    <th scope="col">factory_color</th>
                </tr>
            <tbody>
                @foreach (var Car in Model)
                {
                    <tr>
                        <td>@Car.manufacturer</td>
                        <td>@Car.year</td>
                        <td>@Car.model</td>
                        <td>@Car.horsepower</td>
                        <td>@Car.factory_color</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>